{
  "name": "lectura-backend",
  "version": "1.0.0",
  "description": "API REST pour la plateforme de gestion de bibliothèque LECTURA",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "seed": "node src/utils/seed.js",
    "migrate": "node src/utils/initDb.js",
    "db:init": "node database/init-database-complete.js",
    "db:reset": "node database/init-database-complete.js reset",
    "db:migrate": "node database/init-database-complete.js",
    "db:seed": "node database/init-database-complete.js",
    "db:fresh": "node database/init-database-complete.js reset",
    "jobs": "node scripts/jobs-manager.js",
    "jobs:help": "node scripts/jobs-manager.js help",
    "jobs:status": "node scripts/jobs-manager.js status",
    "jobs:cleanup": "node scripts/jobs-manager.js cleanup --all",
    "jobs:cleanup:quick": "node scripts/jobs-manager.js cleanup --notifications --sessions --tokens",
    "jobs:stats:daily": "node scripts/jobs-manager.js stats daily",
    "jobs:stats:weekly": "node scripts/jobs-manager.js stats weekly",
    "jobs:stats:monthly": "node scripts/jobs-manager.js stats monthly"
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql",
    "api",
    "bibliotheque",
    "jwt",
    "rest"
  ],
  "author": "Équipe LECTURA",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
